-- examples of the let statement

let x = 1.  -- the variable x is the simplest pattern possible
let 1 = 1.  -- the 1 on the left is the pattern, on the right the value
let x:%integer = 1. -- type patterns work here too
let (x,y) = (1,2). -- pattern instantiated x=1 and y=2
let ((a,b),(c,d)) = ((1,2),(3,4)). -- pair of pairs

